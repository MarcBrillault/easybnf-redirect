{
    "manifest_version": 2,
    "author": "Marc Brillault",
    "homepage_url": "https://github.com/MarcBrillault/easybnf-redirect",
    "name": "EasyBNF redirect",
    "version": "1.0.1",
    "description": "Redirige les liens vers les articles gérés par leur équivalent via le site de la BNF",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
      "*://www.mediapart.fr/*", "*://www.arretsurimages.net/*", "*://*.bnf.idm.oclc.org/*", "*://bnf.idm.oclc.org/*", "*://idppub.bnf.fr/*", "*://authentification.bnf.fr/*", "activeTab"
    ],
    "background": {
	"scripts": ["script.js"]
    }
}
